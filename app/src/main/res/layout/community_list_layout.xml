<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_community_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:backgroundTint="#EEF1F4"
        android:clickable="false"
        android:focusable="false"
        android:paddingStart="65dp"
        android:paddingEnd="16dp"
        android:fontFamily="@font/poppins_bold"
        android:paddingVertical="7dp"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="Komunitas"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_community_color"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:background="@drawable/dashboard_nav_bar_button_background"
        android:backgroundTint="@color/light_2"
        android:contentDescription="setting"
        android:elevation="10dp"
        android:padding="10dp"
        android:clickable="false"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_community_name"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@+id/btn_community_name"
        app:layout_constraintTop_toTopOf="@+id/btn_community_name" />

</androidx.constraintlayout.widget.ConstraintLayout>